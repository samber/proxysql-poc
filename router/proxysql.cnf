

# Server definitions
mysql_servers =
(
	{ address = "master", port = 3306, hostgroup = 0, max_connections = 1024 },
	{ address = "slave",  port = 3306, hostgroup = 1, max_connections = 1024 }
)

mysql_users:
(
	{ username = "iadvize", password = "iadvize", default_hostgroup = 0, max_connections=1024 },
	{ username = "iadvize", password = "iadvize", default_hostgroup = 1, max_connections=1024 }
)


# Global variables (^admin- and ^mysql-)
admin_variables =
{
	admin_credentials="admin:admin"
	mysql_ifaces="0.0.0.0:6033"
#	refresh_interval=2000
#	debug=true
}

mysql_variables =
{
	threads = 4
	max_connections = 2048
	default_query_delay = 0
	default_query_timeout = 36000000
	have_compress = true
	poll_timeout = 2000
	interfaces = "0.0.0.0:3306"
	default_schema = "iadvize"
	stacksize = 1048576
	server_version = "5.6.34"
	connect_timeout_server = 3000
	monitor_username = "iadvize"
	monitor_password = "iadvize"
	monitor_history = 600000
	monitor_connect_interval = 60000
	monitor_ping_interval = 5000
	monitor_read_only_interval = 1500
	monitor_read_only_timeout = 500
	ping_interval_server = 5000
	ping_timeout_server = 500
	commands_stats = true
	sessions_sort = true
	connect_retries_on_failure = 10
}


# Routing rules
mysql_query_rules =
(
	{ rule_id = 1, active = 1, match_pattern = ".*@.*",	          destination_hostgroup = 0, apply = 1 },
	{ rule_id = 2, active = 1, match_pattern = "^SELECT.*",           destination_hostgroup = 1, apply = 0 },
	{ rule_id = 3, active = 1, match_pattern = "^SELECT.*FOR UPDATE", destination_hostgroup = 0, apply = 1 }
)


# Other
datadir = "/data/proxysql"

